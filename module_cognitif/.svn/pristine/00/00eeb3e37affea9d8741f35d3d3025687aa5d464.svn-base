        var lang = req.param('lang');
        if (!lang || (lang !== 'fr' && lang !== 'en')) lang = 'en';

        const credentials = CredentialService.getCredentials(lang);

        res.setTimeout(0);

        req.file('dialog_xml').upload({maxBytes: Number.MAX_VALUE}, function (err, uploadedFiles) {
