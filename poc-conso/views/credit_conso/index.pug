    script(src='https://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
    script(type='text/javascript').
    script(src='/js/chatbox/image-picker.js')
    script(src='/js/chatbox/progressbar.js')
    script(src='/js/chatbox/bootstrap-slider.js')
    script(src='/js/chatbox/html2pdf.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.debug.js')
    script(src='/js/chatbox/animation.js')
    script(src='/js/chatbox/main.js')
