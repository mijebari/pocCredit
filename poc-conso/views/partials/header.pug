.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa
          img(src="/images/Image1.png")
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') Home
        li(class=(title == 'Chat') ? 'active' : undefined)
          a(href='/chat') Chat
        li(class=(title == 'Training') ? 'active' : undefined)
          a.dropdown-toggle(data-toggle='dropdown', href='#', role='button', aria-haspopup='true', aria-expanded='false')
            | Training 
            span.caret
          ul.dropdown-menu
            li(class=(title == 'Training') ? 'active' : undefined)
              a(href='/training/') Classification
            li(class=(title == 'Training') ? 'active' : undefined)
              a(href='/training/toTrained') Validation
            li(class=(title == 'Training') ? 'active' : undefined)
              a(href='/training/nlcTrained') Intentions
            li(class=(title == 'Training') ? 'active' : undefined)
              a(href='/training/categories') Manage Categories

        li(class=(title == 'Unit test') ? 'active' : undefined)
          a.dropdown-toggle(data-toggle='dropdown', href='#', role='button', aria-haspopup='true', aria-expanded='false')
              | Unit test
              span.caret
          ul.dropdown-menu
              li(class=(title == 'Unit test') ? 'active' : undefined)
                a(href='/unit_test/') Create Test
              li(class=(title == 'Run Test') ? 'active' : undefined)
                a(href='/unit_test/test') Run & Results
        li(class=(title == 'Logs') ? 'active' : undefined)
                  a(href='/logs') Logs
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else

          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
                input#profileImg(type="hidden", value=user.profile.picture)
              else
                img(src=user.gravatar(60))
                input#profileImg(type="hidden", value=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
